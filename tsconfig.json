{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": ["jest"]
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "**/Tests/**"
  ]
}